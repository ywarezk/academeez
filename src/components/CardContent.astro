---

interface Props {
	title: string;
	img?: string;
	slug?: string;
}

const { title, img, slug } = Astro.props;

const icon = `/icons/${img || title.toLowerCase()}.svg`;
const calcSlug = slug || title.toLowerCase();
---

<div class="flex flex-col justify-items-center place-items-center align-middle">
  <div class="flex w-full not-content items-center">
    <img src={icon} alt={title} class="h-12 mr-3" />
    <h3>
      <a href={`/courses/${calcSlug}`}>{title}</a>
    </h3>
  </div>
  <p>
		<slot />
  </p>
</div>
