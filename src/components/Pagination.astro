---
import Default from '@astrojs/starlight/components/Pagination.astro';

const data = Astro.locals.starlightRoute.entry.data;
const isComments = data.template !== 'splash';
---

<Default {...Astro.props} />

{
	isComments && (
		<script
			is:inline
			src="https://giscus.app/client.js"
			data-repo="ywarezk/academeez"
			data-repo-id="MDEwOlJlcG9zaXRvcnkzNTM5NTg5MzM="
			data-category="Q&A"
			data-category-id="DIC_kwDOFRj8Fc4CWvMY"
			data-mapping="pathname"
			data-strict="0"
			data-reactions-enabled="1"
			data-emit-metadata="0"
			data-input-position="top"
			data-theme="light"
			data-lang="en"
			data-loading="lazy"
			crossorigin="anonymous"
			async
		/>
	)
}
